
#include<bits/stdc++.h>
using namespace std;
int main()
{
	int n;
	cin>>n;
	char hike[n];
        int count = 0;
        int altitude = 0;
        
        for(int i=0;i<n;i++) {
            if(hike[i]== 'U') {
                if(altitude == -1) {
                    count++;
                }
                altitude++;
            }
            else {
                altitude--;
            }
        }        
    	cout<<count;
   return 0;
    }
